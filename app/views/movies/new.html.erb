<% content_for :title, "New movie" %>

<h1 style="text-align: center; color: #007bff; font-family: 'Arial', sans-serif; font-size: 36px;">New Movie</h1>

<style>
  form {
    max-width: 600px;
    margin: 0 auto;
    padding: 20px;
    background-color: #f9f9f9;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  form label {
    font-weight: bold;
    font-size: 16px;
  }

  form input, form select, form textarea {
    width: 100%;
    padding: 10px;
    margin: 10px 0 20px;
    border-radius: 5px;
    border: 1px solid #ccc;
    font-size: 14px;
  }

  form input[type="submit"] {
    background-color: #28a745;
    color: white;
    font-size: 16px;
    border: none;
    cursor: pointer;
    padding: 12px 20px;
    transition: background-color 0.3s ease;
  }

  form input[type="submit"]:hover {
    background-color: #218838;
  }

  /* Center back link */
  .back-link {
    text-align: center;
    margin-top: 20px;
  }

  .back-link a {
    color: #dc3545;
    text-decoration: none;
    font-size: 16px;
    font-weight: bold;
  }

  .back-link a:hover {
    text-decoration: underline;
  }
</style>

<%= render "form", movie: @movie %>

<div class="back-link">
  <%= link_to "Back to Movies", movies_path %>
</div>